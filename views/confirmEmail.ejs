<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="stylesheet" href="/tailwindcss/tailwind.min.css">
  <title>Confirm Email</title>
</head>

<body class="bg-gray-200 p-20">
  <div class="bg-white w-1/3 mx-auto p-10 shadow rounded-sm">
    <h1 class="text-2xl font-thin">We have sent you an email, please check your inbox.</h1>
  </div>

  <script src="/axios/axios.min.js"></script>
  <script>
    function confirmEmail(token) {
      axios.put(`/auth/confirm/${token}`)
        .then(({ data, status }) => {
          console.log(data)
        })
        .catch(({ response }) => {
          console.log(response)
        })
    }
    // get token to confirm email async
    const url = window.location.href.split('/')
    const token = url[url.length]
    confirmEmail(token)
  </script>
</body>

</html>